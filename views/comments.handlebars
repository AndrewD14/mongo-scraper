<div>
    <h1>Comments</h1>
    <div class="row">
        <div class="col">
            <h5><a href={{url}} target="_blank">{{headlines}}</a></h5>
        </div>
    </div>
    <div class="w-100"></div>
    <div class="row">
        <div class="col">{{postDt}}</div>
    </div>
    <button type="submit" class="badge badge-primary" data-toggle="modal" data-target="#addCommentModal"><span class="glyphicon glyphicon-plus"></span>Add Comment</button>
    <hr>
    {{#each comments}}
        <div class="row">
            <div class="col"><p>{{message}}</p></div>
            <div class="col-2"><form action="/remove-comment/{{_id}}" method="POST"><button type="submit" class="badge badge-danger">X</button></form></div>
        </div>
        <hr class="style-seven">
    {{else}}
        <p>No comments yet.</p>
    {{/each}}
</div>
<!-- Modal -->
<div id="addCommentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">New Comment</h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <!-- form content-->
                <form id="newCommentForm" action="/newComment/{{_id}}" method="POST">
                    <fieldset>
                        <div class="form-group"> 
                            <label for="">Comment</label>
                            <textarea class="form-control" rows="4" cols="50" name="message"></textarea>
                        </div>
                        <button type="submit" class="badge badge-secondary">Submit</button>
                        <button type="button" class="badge badge-danger" data-dismiss="modal">Cancel</button>
                    </fieldset>
                </form> <!-- /end form -->
            </div>
        </div>
    </div>
</div> <!-- /end updateModal -->