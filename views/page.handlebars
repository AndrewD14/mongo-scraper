<div>
    <h1>articles</h1>
    {{#each results}}
        <p>
            <h4><a href={{url}} target="_blank">{{headlines}}</a></h4>
            <p>{{postDate}}</p>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#{{_id}}" aria-expanded="false" aria-controls="{{_id}}">
                Show news summary
            </button>
            <button class="btn btn-secondary" type="button">
                Add to Favorites
            </button>
            <a href="/article/{{_id}}" class="btn btn-info">View Comments</a>
        </p>
        <div class="collapse" id="{{_id}}">
            <div class="card card-body">
                {{summary}}
                <img src={{imgURL}} class="newsImg" style="width:35%;"/>
            </div>
        </div>
    {{else}}
        <p>No articles to display.</p>
    {{/each}}
    {{#if pages}}
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {{#if first}}
                    <li class="page-item"><a class="page-link" href="/page/{{first}}">First</a></li>
                {{/if}}
                {{#if previous}}
                    <li class="page-item"><a class="page-link" href="/page/{{previous}}">Previous</a></li>
                {{/if}}
                {{#each pages}}
                    <li class="page-item"><a class="page-link" href="/page/{{this}}">{{this}}</a></li>
                {{/each}}
                {{#if next}}
                    <li class="page-item"><a class="page-link" href="/page/{{next}}">Next</a></li>
                {{/if}}
                {{#if last}}
                    <li class="page-item"><a class="page-link" href="/page/{{last}}">Last</a></li>
                {{/if}}
            </ul>
        </nav>
    {{/if}}
</div>