<div>
    <h1>Articles</h1>
    <hr>
    {{#each results}}
        <div class="row">
            <div class="row">
                <div class="col">
                    <h5><a href={{url}} target="_blank">{{headlines}}</a></h5>
                </div>
            </div>
            <div class="w-100"></div>
            <div class="row">
                <div class="col">{{postDt}}</div>
            </div>
            <div class="w-100"></div>
            <div class="row">
                <button class="badge badge-primary float-left" type="button" data-toggle="collapse" data-target="#{{_id}}" aria-expanded="false" aria-controls="{{_id}}">
                    Show news summary
                </button>
                <form action="/addFav/{{_id}}" method="POST">
                    <button class="badge badge-secondary float-left" type="submit">
                        Add to Favorites
                    </button>
                </form>
                <a href="/article/{{_id}}"><button class="badge badge-info float-left">View Comments</button></a>
            </div>
            <div class="collapse row" id="{{_id}}">
                <div class="card card-body">
                    {{summary}}
                    <img src={{imgURL}} class="newsImg" />
                </div>
            </div>
        </div>
        <hr class="style-eight">
    {{else}}
        <p>No articles to display.</p>
    {{/each}}
    {{#if pages}}
        <nav aria-label="Page navigation">
            <ul class="pagination remove-ul-margin justify-content-center">
                {{#each pages}}
                    <li class="page-item"><a class="page-link" href="/page/{{this}}">{{this}}</a></li>
                {{/each}}
                <li class="page-item"><a class="page-link" href="/page/2">Next</a></li>
                <li class="page-item"><a class="page-link" href="/page/{{last}}">Last</a></li>
            </ul>
        </nav>
    {{/if}}
</div>